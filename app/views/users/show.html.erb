<div class="mypage-title"><%= @user.name %><span>さんのマイページ</span></div>
<div class="title2-container">
<div class="change-month"><%= link_to '←', user_path(id: current_user.id, p: @x) %></div>
<div class="title2"><%= @this_year %>年<%= @this_month %>月</div>
