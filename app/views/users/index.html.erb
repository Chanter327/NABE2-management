<div class="users-index-title">ユーザー一覧</div>
<div class="title2-container">
<div class="change-month"><%= link_to '←', users_path(p: @x) %></div>
<div class="title2"><%= @this_year %><span>年</span><%= @this_month %><span>月</span></div>
<div class="change-month"><%= link_to '→', users_path(n: @x) %></div>
</div>
<div class="users-index">
    <% @users.each do |user| %>
    <% if user.id >= 3 %>
    <div class="index-content">
        <% if params[:p].present? %>
        <div class="index-content-name"><span><%= link_to "#{user.name}", user_path(id: user.id, p: @x += 1) %> さん</span></div>
        <% elsif params[:n].present? %>
        <div class="index-content-name"><span><%= link_to "#{user.name}", user_path(id: user.id, n: @x -= 1) %> さん</span></div>
        <% else %>
        <div class="index-content-name"><span><%= link_to "#{user.name}", user_path(id: user.id) %> さん</span></div>
        <% end %>
            <div class="index-content-container">
            <div class="content">
            <p>スケジュール</p>
            <p class="length"><%= @addedSchedule.where(user_id: user.id).length %></p>
            <p>件</p>
            </div>
            <div class="content">
            <p>打刻回数</p>
            <p class="length"><%= @addedTimestamp.where(user_id: user.id).length %></p>
            <p>件</p>
            </div>
        </div>
    </div>
    <% end %>
    <% end %>
</div>